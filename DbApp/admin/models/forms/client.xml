<?xml version="1.0" encoding="utf-8"?>
<form
	addrulepath="/administrator/components/com_dbapp/models/rules"
>
	<fieldset name="details">
		<field
			name="id"
			type="hidden"
		/>
		<field
			name="principalinvestigator"
			type="text"
			label="Client - P.I."
			description="DbApp Client Principal Investigator DESC"
      class="inputbox"
			size="40"
			required="true"
			default=""
		/>
    <field
      name="catid"
      type="category"
      extension="com_dbapp"
      class="inputbox"
      default=""
      label="Category [int/ext]"
      description="This value is used for billing"
      required="true"
        >     
      <option value="0">JOPTION_SELECT_CATEGORY</option>
    </field>
    <field
      name="department"
      type="text"
      label="DbApp Client department"
      description="DbApp Client department DESC"
      class="inputbox"
      size="40"
      required="false"
      default=""
    />
    <field
      name="address"
      type="text"
      label="Client address"
      description="DbApp Client address DESC"
      required="false"
      class="inputbox"
      size="40"
      default=""
    />
    <field
      name="vatno"
      type="text"
      label="Client vatno"
      description="DbApp Client vatno DESC"
      required="false"
      class="inputbox"
      size="40"
      default=""
    />
    <field
      name="comment"
      type="text"
      label="Comment"
      description="DbApp Client comment DESC"
      required="false"
      class="inputbox"
      size="40"
      default=""
    />
    <field
      name="user"
      type="text"
      label="User"
      description="DbApp Client user DESC"
      required="true"
      class="inputbox"
      size="40"
      default=""
    />
    <field
      name="time"
      type="text"
      label="Time"
      description="DbApp Client time DESC"
      required="true"
      class="inputbox"
      size="40"
      default=""
    />
	</fieldset>
  
